          }
        }
      }
    },
    "/api/Borrowings/returned/count": {
      "get": {
        "tags": [
          "Borrowings"
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
